<h2>Edit article</h2>

<%= form_for :article, url: article_path(@article), data: {turbo:false}, method: :put do |f| %>
    <p>
       Title<br />
       <%= f.text_field :title %>
    </p>

     <p>
       <%= f.label :text %><br />
       <%= f.text_area :text %>
    </p>

    <%= f.submit %>


<% end %> 

 